<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="EmployeeService" transaction-type="RESOURCE_LOCAL">
        <class>examples.model.Employee</class>
        <validation-mode>NONE</validation-mode>
		<properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/EmpServDB "/> 
			<property name="javax.persistence.jdbc.user" value="java"/>
			<property name="javax.persistence.jdbc.password" value="java"/>
            <!-- enable this property to see SQL and other logging -->
            <!-- property name="eclipselink.logging.level" value="FINE"/ -->
        </properties>
    </persistence-unit>
</persistence>
